{
	"private": true,
	"name": "discriminatory-backend",
	"version": "1.0.0",
	"description": "Discriminatory GraphQL API",
	"main": "index.js",
	"scripts": {
		"develop": "yarn nodemon -r dotenv/config index.js",
		"deploy": "npm install && sudo pm2 start index.js && sudo pm2 startup",
		"test": "jest --colors --expand --logHeapUsage --config jest.config.js --verbose --coverage --passWithNoTests",
		"lint": "eslint --ext .js ./ --config .eslintrc.yml --fix",
		"fix": "prettier --write **/*.js",
		"docs": "node ./scripts/docs.js && gh-pages -d docs"
	},
	"author": "Nabil <nabil.tharwat@outlook.com>",
	"license": "MIT",
	"devDependencies": {
		"@2fd/graphdoc": "^2.4.0",
		"babel-eslint": "^10.1.0",
		"eslint": "7.2.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-recommended": "^4.1.0",
		"eslint-plugin-import": "2.21.2",
		"eslint-plugin-sort-destructure-keys": "^1.3.3",
		"gh-pages": "^3.1.0",
		"jest": "^25.2.6",
		"nodemon": "^2.0.4",
		"prettier": "^1.18.2"
	},
	"dependencies": {
		"@graphql-tools/utils": "^6.0.18",
		"@hapi/joi": "^17.1.1",
		"apollo-server-express": "^2.16.1",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-graphql": "^0.11.0",
		"firebase": "^7.17.2",
		"firebase-admin": "^9.0.0",
		"graphql": "^15.3.0",
		"graphql-depth-limit": "^1.1.0",
		"graphql-tag": "^2.11.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.9.27",
		"redis": "^3.0.2"
	}
